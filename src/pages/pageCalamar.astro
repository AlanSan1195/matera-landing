---
import "@fontsource/permanent-marker";
import Layout from "@/layouts/Layout.astro";
const calamar = {
  visualDescription:
    " Un calamar que obrtenemos de la patagonia Argentia. siempre intentamos reflejar el respeto por el producto  ",
  title: "Visual del paltillo del calamar",
  description: " Visual del platillo del calamar ",
  preparacion: "Previamente marinado con un Provenzal (ajo y perejil)",
