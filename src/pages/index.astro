---

import HomeReserva from "../components/HomeReserva.astro";
import LandingHeader from "../components/LandingHeader.astro";
import Carta from "../components/Carta.astro";
import Contacto from "../components/Contacto.astro";
import Eventos from "../components/Eventos.astro";
import Nosotros from "../components/Nosotros.astro";
import Layout from "../layouts/Layout.astro";
import SectionBackground from "../components/Caurosel.astro";
---

<Layout title="La Matera - El sabor de argentina en casa">
  <LandingHeader />

  <main
    class="snap-y snap-mandatory relative w-full h-screen overflow-y-auto overflow-x-hidden scroll-smooth"
  >
    <div class="snap-center">
      <HomeReserva />
    </div>
    <div class="snap-center">
      <Carta />
    </div>
    <div class="snap-center">
      <Eventos />
    </div>
  </main>
</Layout>
