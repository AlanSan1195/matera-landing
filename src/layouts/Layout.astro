    .buttons button {
      width: 50px;
      height: 30px;
      margin-bottom: 20px;
    }
  }
  .buttons button:hover {
    background-color: #501313;
    color: #fff;
    scale: 1.1;
  } */

  /* .buttons button:hover {
    color: #fff;
    scale: 1.1;
  } */
  /* #Empanadas,
  #Entradas,
  #Pizzas,
  #Ensaladas,
  #Cocina {
    transition: opacity 0.5s ease-in-out;
    opacity: 0;
    display: none;
  } */

  /* .entradas-div {
  max-height:500px;
  overflow-y: auto;
} */
  .image-drop-shadow-empanadas {
    height: 6rem; /* Altura fija de 12rem */
    width: 6rem; /* Ancho fijo de 12rem */
    object-fit: cover; /* Asegura que la imagen cubra todo el espacio asignado sin deformarse */
    /* Margen superior de 0.5rem */
    margin-right: 0.5rem; /* Margen derecho de 0.5rem */
    margin-left: auto; /* Margen izquierdo automático para centrar horizontalmente */
    filter: drop-shadow(
      2px 4px 6px black
    ); /* Sombra con desplazamiento horizontal de 2px, vertical de 4px y difuminado de 6px */
  }
  .image-drop-shadow {
    height: 8rem; /* Altura fija de 12rem */
    width: 8rem; /* Ancho fijo de 12rem */
    object-fit: cover; /* Asegura que la imagen cubra todo el espacio asignado sin deformarse */
    /* Margen superior de 0.5rem */
    margin-right: 0.5rem; /* Margen derecho de 0.5rem */
    margin-bottom: 0.9rem;
    margin-left: auto; /* Margen izquierdo automático para centrar horizontalmente */
    filter: drop-shadow(
      2px 4px 6px black
    ); /* Sombra con desplazamiento horizontal de 2px, vertical de 4px y difuminado de 6px */
  }
  /* Estilos para la barra de desplazamiento */

  /* 
  para hacer un tarnsicion simepres es necesario hacer una medida determinadada maxima usar "max-height" */
  .mostrar {
    opacity: 1;
    max-height: 1150px;
    transition: opacity 0.5s ease-in-out, max-height 0.5s ease-in-out;
  }

  .ocultar {
    opacity: 0;
    max-height: 0;
    transition: opacity 0.5s ease-in-out, max-height 0.5s ease-in-out;
  }

  .ocultarParrilla {
    display: none;
    opacity: 0;
    max-height: 0;
    overflow: hidden;
    /* animation: reverseFadeIn 0.5s ease-in-out; */
    transition: opacity 0.5s ease-in-out, max-height 0.5s ease-in-out;
  }

  .mostrarParrilla {
    display: grid;
    opacity: 1;
    max-height: auto;
    /* modifique este para poner la parrilla en columna con el nuevo */
    /* animation: fadeIn 0.5s ease-in-out; */
    transition: opacity 0.5s ease-in-out, max-height 0.5s ease-in-out;
  }

  /* clases para mostrar y ocultar en MD version de prueba */

  @keyframes fadeIn {
    from {
      display: none;
      opacity: 0;
      max-height: 0px;
    }
    to {
      display: grid;
      opacity: 1;
      max-height: 1150px;
    }
  }
  @keyframes reverseFadeIn {
    from {
      display: grid;
      opacity: 1;
      max-height: 1150px;
    }
    to {
      display: none;
      opacity: 0;
      max-height: 0px;
    }
  }

  .ocultarLG {
    display: none;
    opacity: 0;
    max-height: 1150px;
    overflow: hidden;
    animation: reverseFadeInLG 0.5s ease-in-out;
  }

  .mostrarLG {
    display: auto;
    opacity: 1;
    max-height: 1900px;
    animation: fadeInLG 0.5s ease-in;
  }

  @keyframes fadeInLG {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes reverseFadeIn {
    0% {
      opacity: 1;
    }

    to {
      opacity: 0;
    }
  }

  .verDiv {
    opacity: 1;
    max-height: 1000px; /* Ajusta este valor según tus necesidades */
    transition: opacity 0.5s ease, max-height 0.5s ease;
  }

  .esconderDiv {
    opacity: 0;
    max-height: 0;
    overflow: hidden;
    transition: opacity 0.5s ease, max-height 0.5s ease;
  }
  .simple-radial {
    background: radial-gradient(rgb(80, 82, 78), rgb(0, 0, 0));
  }
  #pulser {
    animation: pulser2 2s ease-in infinite;
  }

  #pulser::after {
    content: "";
    position: absolute;
    border-radius: 50%;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: transparent;
    border: 0.3px solid white;

    animation: pulser 2s ease-in infinite;
    z-index: -1;
  }

  @keyframes pulser {
    0% {
      opacity: 0;
    }

    50% {
      opacity: 0.2;
      scale: 11;
    }
    100% {
      opacity: 0;
    }
  }
  @keyframes pulser2 {
    0% {
      scale: 1;
    }
    50% {
      scale: 0.5;
    }
  }
</style>
