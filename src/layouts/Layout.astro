---
// Supports weights 100-900
import '@fontsource-variable/lora';
// Supports weights 400-700
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="https://www.lamatera.mx/wp-content/themes/bmx-lamatera/assets/img-logotipo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: 'Lora Variable',  "Courier New", Courier, monospace;
  }

  /* estilos de las imagenes de la carta  */
  * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}



.container {
  border-radius: 100px;
  position: relative;
  display: flex; 
  top: 270px;

  width: 90vh;
  height: 55vh;
  margin-left: 115px;
  background: #f5f5f5;
  box-shadow: 0 10px 20px #393636;
  background-size: cover;


}

.container .slider .item {
  width: 250px;
  height: 160px;
  position: absolute;
  top: 50%;
  transform: translate(0, -50%);
  border-radius: 20px;
  box-shadow: 0 30px 50px #505050;
  background-position: 50% 50%;
  background-size: cover;
  display: inline-block;
  transition: 0.5s;
  z-index: 1;


}

.slider .item:nth-child(1),
.slider .item:nth-child(2) {
  top: 0;
  left: 0;
 
  transform: translate(0, 0);
  border-radius: 50px;
  width: 100%;
  height: 100%;
  z-index: 1;
}


.slider .item:nth-child(3) {
  left: 90%
;
}

.slider .item:nth-child(4) {
  left: calc(90% + 270px)
}

.slider .item:nth-child(5) {
  left: calc(90% + 540px)
  ;
}

.slider .item:nth-child(6) {
  display: none;
  left: calc(90% + 750px);
}

/* Hide all after nth child 5 */
.slider .item:nth-child(n+7) {
  display: none;
}

.container .slider .item .content {
  position: relative;
  top: 50%;
  left: 50px;
  width: 300px;
  text-align: left;
  color: #eee;
  transform: translate(0, -50%);
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  display: none;
  
}

.slider .item:nth-child(2) .content {
  display: block;
}

.content .name {
  font-size: 40px;
  text-transform: uppercase;
  font-weight: bold;
  opacity: 0;
  animation: animate 1s ease-in-out 1 forwards;
}

.content .description {
  margin-top: 10px;
  margin-bottom: 20px;
  opacity: 0;
  animation: animate 1s ease-in-out 0.3s 1 forwards;
}

.content button {
  padding: 10px 20px;
  border: none;
  cursor: pointer;
  opacity: 0;
  animation: animate 1s ease-in-out 0.6s 1 forwards;
}

@keyframes animate {
  from {
    opacity: 0;
    transform: translate(0, 100px);
    filter: blur(33px);
  }
  to {
    opacity: 1;
    transform: translate(0, 0);
    filter: blur(0);
  }
}

.buttons {
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: 20px;
  z-index: 10;
}

.buttons button {
  width: 40px;
  height: 40px;
  border-radius: 8px;
  /* border: none; */
  cursor: pointer;
  margin: 0 5px;
  border: 2px solid #000;
  transition: 0.3s;
}

.buttons button:hover {
  background: #ababab;
  color: #fff;
}
/* estudiar estilo  */
.blur-edge::before {
  content: "";
  position: absolute;
  top: -5px;
  left: -5px;
  right: -5px;
  bottom: -5px;
  background: inherit ;
  z-index: -1;
  filter: blur(10px);
}
#Empanadas, #Entradas, #Pizzas, #Ensaladas, #Cocina {
  transition: opacity .5s ease-in-out;
  opacity: 0;
  display: none;
}
.entradas-div {
  max-height:500px;
  overflow-y: auto;
}
</style>
