---

const {src, name, description, price} = Astro.props
---

<div class="items-center sm:hidden md:flex relative xl:scale-110 xl:m-8 m-2 ">
  <div
    class="relative m-4 flex flex-col items-center justify-center py-8 transition-all  duration-500  border-b h-full w-full border-red-800/60 rounded-2xl group px-7 before:w-full before:h-full before:rounded-2xl before:backdrop-blur-sm before:z-10 before:absolute "
  >
    <div
      class="relative h-auto opacity-10  w-max z-50 blur-sm transition-all duration-500  group-hover:blur-none group-hover:delay-300 translate-y-10 group-hover:-translate-y-1 group-hover:opacity-100"
    >
      <img
        class="image-drop-shadow-empanadas "
        src={src}
        alt="imagen del producto"
      />
    </div>
    <p
      class="text-center font-boldes text-xl text-white/55 transition-all duration-500 z-[60] group-hover:translate-y-1/3 group-hover:delay-300 group-hover:text-white/85 "
    >
      {name}
    </p>
    <p
      class="text-center text-xs text-white/35 transition-all duration-500 z-[60] group-hover:translate-y-1/3 group-hover:text-white/65 group-hover:delay-300 "
    >
      {description}
    </p>
    <p
      class="text-center text-xs font-boldes  text-white/65 transition-all duration-500 z-[60] group-hover:translate-y-8  group-hover:text-sm group-hover:scale-125 group-hover:delay-300 group-hover:text-white/85  "
    >
      {price}
    </p>
  </div>
</div>

