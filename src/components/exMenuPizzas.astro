---
let { id } = Astro.props;
const pizza = [
  {
    src: "/imagenes/empanadas.webp",
    name: "Margarita",
    Description: "",
    Price: "$60",
  },
  {
    src: "/imagenes/empanadas.webp",
    name: "Hongos",
    Description: "",
    Price: "$60",
  },
  {
    src: "/imagenes/empanadas.webp",
    name: "4 Quesos",
    Description: "",
    Price: "$60",
  },
  {
    src: "/imagenes/empanadas.webp",
    name: "Tomate con anchoas",
    Description: "",
    Price: "$60",
  },
  {
    src: "/imagenes/empanadas.webp",
    name: "Jamón con burrata",
    Description: " Jamón fabricado en casa",
    Price: "$60",
  },
  {
    src: "/imagenes/empanadas.webp",
    name: "Pancceta y provolone",
    Description: "",
    Price: "$60",
  },
];
---

<!-- // crea el grid de empanadas -->
<div
  id={id}
  class="hidden overflow-auto    text-black bg-zinc-100 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 w-full md:w-3/4 lg:w-auto mx-auto "
  style="grid-template-columns: repeat(auto-fill, minmax(min-content, max-content));"
>
<!-- arreglar el responsive de pizzas  -->
  {
    pizza.map((item) => (
      <div class=" flex flex-col items-center py- px-11">
        <img class=" size-52 rounded-lg" src={item.src} alt={item.src} />
        <h1>{item.name}</h1>
        <p class=" text-center">{item.Description}</p>
        <p>{item.Price}</p>
      </div>
    ))
  }
</div>
