---

<!-- // crea el grid de empanadas -->
<div
  id={id}
  class="hidden mt-4 overflow-auto text-white grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 xl:grid-cols-5 w-full max-h-[700px] md:w-3/4 lg:w-auto gap-x-4 ml-2"
  style="grid-template-columns: repeat(auto-fill, minmax(min-content, max-content));"
>
  {
    postre.map((item) => (
      <div class="flex flex-col items-center mt-4 mx-auto">
        <img class="size-52 rounded-lg" src={item.src} alt={item.src} />
        <h1 class=" font-medium text-2xl py-1">{item.name}</h1>
        {typeof item.Description === "object" && item.Description.sabor ? (
          <>
            <button
              class="bg-red-500 text-white rounded p-2"
              onclick="document.getElementById('sabores').classList.toggle('opacity-0'); document.getElementById('sabores').classList.toggle('scale-0');"
            >
              Sabores
            </button>
            <div
              id="sabores"
              class="flex flex-wrap bg-white bg-opacity-20 border-2 border-red-500 p-2 rounded-lg transition-all duration-2000 ease-out transform opacity-0 scale-0 mt-1 blur-edge relative"
            >
              {item.Description.sabor.map((sabor) => (
                <div class="w-1/3 p-2">
                  <p class="text-center text-white">{sabor}</p>
                </div>
              ))}
            </div>
          </>
        ) : (
          <p class="text-center">{item.Description}</p>
        )}
        <p class="font-bold text-xl">{item.Price}</p>
      </div>
    ))
  }
</div>
