<!-- // crea el grid de empanadas -->
<div id="conteiner" class=" hidden bg-zinc-500 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 w-full md:w-3/4 lg:w-[1100px] mx-auto">
  {
    empanada.map((item) => (
      <div class=" bg-zinc-500 flex flex-col items-center py-6 ">
        <img class=" size-40 rounded-lg" src={item.src} alt={item.src} />
        <h1>{item.name}</h1>
        <p>{item.Description}</p>
        <p>{item.Price}</p>
      </div>
    ))
  }
</div>
<script>
  //muestra y oculta el contenedor de empanadas
  document.addEventListener("DOMContentLoaded", function () {
    const content = document.getElementById("conteiner");
    const empanadas = document.getElementById("ver-empanadas");

    empanadas.addEventListener("click", () => {
      content.classList.toggle("hidden");
    });
  });
  //muestray oculta el contenedor de entradas
  document.addEventListener("DOMContentLoaded", function () {
    const content = document.getElementById("conteiner");
    const entradas = document.getElementById("ver-entradas");

    entradas.addEventListener("click", () => {
      content.classList.toggle("hidden");
    });
  });


</script>
