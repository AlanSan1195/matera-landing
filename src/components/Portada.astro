---
const { color, title, subtitle, id, showFooterContent } = Astro.props;
const textColor = `text-${color}`;
import Logo2 from "./Logo2.astro";
---

<section
  class="landing-section  min-h-screen w-screen text-center overflow-hidden"
  data-header-color={color}
  id={id}
>
  <div id="Logo2" class="flex flex-grow basis-0 hidden lg:block ">
    <img ><Logo2 /></img>
  </div>

  <div
    class="opacity-85 z-30 relative h-auto text-end mt-24 md:w-[700px] lg:w-[900px] xl:w-[1300px] flex flex-col flex-wrap ml-auto md:mt-40 lg:mt-40 text-pretty bg-slate-200 "
  >
    <header class=" lg:p-2  ">
      <h2
        class={`${textColor} mr-2  lg:mr-4  lg:pt-28 xl:pt-48 text-6xl lg:text-5xl xl:text-7xl  font-semibold`}
      >
        {title}
      </h2>
      <p class={`${textColor}  mr-2 ml-5 lg:mr-4 text-xs md:text-xl xl:text-2xl mt-3`}>
        {subtitle}
      </p>
    </header>

    <footer
      class="py-6 flex flex-col flex-grow justify-end mr-auto ml-auto md:mr-14"
    >
      <slot name="footer" />
     
    </footer>
  </div>

  <div class=" absolute top-0 bottom-0 h-full w-full z-10 sm:hidden md:block">
    <slot name="background" />
  </div>
</section>
<script>
  // Este script se ejecutará en el navegador, después de que la página se haya cargado
  document.addEventListener("DOMContentLoaded", function () {
    window.addEventListener("scroll", function () {
      let logo = document.getElementById("Logo2");
      if (window.innerWidth >= 1024){
        if(window.scrollY >50){
          logo.style.transition="opacity 0.5s";
          logo.style.opacity="0";
        }else{
          logo.style.transition="opacity 0.5s";
          logo.style.opacity="1";
        
        }
      }
      // let windowPosition = window.scrollY > 220;

      // logo.classList.toggle("invisible", windowPosition);
    });
    // risize de texto titulo 
     if(window.innerWidth > 380){
          let title = document.querySelector(".landing-section h2") as HTMLHeadingElement;
          let subtitle = document.querySelector(".landing-section p") as HTMLParagraphElement;
          title.style.fontSize = "85px";
          subtitle.style.fontSize = "14px";
          
        }
      });
</script>