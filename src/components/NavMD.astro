    function mostrarDiv(name) {
      Object.keys(menu).forEach((key) => {
        if (menu[key]) {
          if (key === name) {
            menu[key].classList.remove("ocultarLG");
            menu[key].classList.add("mostrarLG");
          } else {
            menu[key].classList.remove("mostrarLG");
            menu[key].classList.add("ocultarLG");
          }
        }
      });
    }

    // mostrar elementos de la parrilla segun el click en MD
    function subDivs(name) {
      Object.keys(subMenu).forEach((key) => {
        if (subMenu[key]) {
          if (key === name) {
            subMenu[key].classList.contains("hidden");
            subMenu[key].classList.remove("hidden");
          } else {
            subMenu[key].classList.add("hidden");
          }
        }
      });
    }
    // mostrar simepre entradas en MD
    Object.keys(menu).forEach((key) => {
      if (menu[key]) {
        if (key === "entradas") {
          menu[key].classList.add("mostrarLG");
        } else {
          menu[key].classList.add("ocultarLG");
        }
      }
    });

    // Event listeners para los botones o enlaces EL MENUS DE md
    Object.keys(menu).forEach((key) => {
      const button = document.getElementById(`ver-${key}`);

      if (button) {
        button.addEventListener("click", function () {
          mostrarDiv(key);
        });
      }
    });

    // Event listeners para los botones  EL MENU DE PARRILLA MD
    Object.keys(subMenu).forEach((key) => {
      const button = document.getElementById(`item${key}`);
      if (button) {
        button.addEventListener("click", function () {
          subDivs(key);
        });
      }
    });
  });
</script>




