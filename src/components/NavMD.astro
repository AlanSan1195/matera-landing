<script>
  const indicadtor = document.querySelector("#indicador") as HTMLElement;
  const itemsMenu = document
    .getElementById("navSelector")
    .querySelectorAll("li");

  // indicador carta md
  const itemsCartaMD = document
    .getElementById("navegacion-cartaMD")
    .querySelectorAll("a");

  itemsCartaMD.forEach((item) => {
    item.addEventListener("click", (e) => {
      e.preventDefault();

      itemsCartaMD.forEach((innerItem) => {
        innerItem.classList.remove("text-red-600");
        // Asegurarse de que todos los elementos tengan 'text-white', excepto el clickeado
        innerItem.classList.add("text-white");
      });

      item.classList.remove("text-white");
      item.classList.add("text-red-600");
    });
  });

  itemsMenu.forEach((item) => {
    item.addEventListener("mouseenter", () => {
      const { left, top, width, height } = item.getBoundingClientRect();

      indicadtor.style.setProperty("--left", `${left}px`);
      // indicadtor.style.setProperty("--top", `${top}px`);
      indicadtor.style.setProperty("--width", `${width}px`);
      indicadtor.style.setProperty("--height", `${height}px`);

      indicadtor.style.opacity = "1";
      indicadtor.style.visibility = "visible";
    });
    item.addEventListener("mouseleave", () => {
      indicadtor.style.opacity = "0";
      indicadtor.style.visibility = "hidden";
    });
  });

  itemsMenu.forEach((item) => {
    item.addEventListener("click", () => {
      itemsMenu.forEach((item) => {
        item.classList.remove("text-red-600");
      });
      item.classList.add("text-red-600");
    });
  });
</script>