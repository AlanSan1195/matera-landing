      <li>
        <a href="#contact" class="text-sm font-semibold text-slate-400  hover:text-red-500">
          Postres
        </a>
      </li>
    </ul>
  </nav>
  <div
    id="menu-backdropBlue"
    class={` 
      absolute bg-blue-500 backdrop-blur-lg rounded
      translate-x-[var(--left)] translate-y-[var(--top)]
      left-0 top-0
      w-[var(--width)] h-[var(--height)]
      transition-all duration-400
      ease-in-out opacity-0 -z-10
    `}
  >
  </div>
  <script>

    const lisItem = document.querySelectorAll("#navegacion-carta li");
    const backDropblue = document.querySelector("#menu-backdropBlue") as HTMLElement;
  
    lisItem.forEach((item) => {
      item.addEventListener("mouseenter", () => {
        const { left, top, width, height } = item.getBoundingClientRect();
  
        backDropblue.style.setProperty("--left", `${left}px`);
        backDropblue.style.setProperty("--top", `${top}px`);
        backDropblue.style.setProperty("--width", `${width}px`);
        backDropblue.style.setProperty("--height", `${height}px`);
  
        backDropblue.style.opacity = "1";
        backDropblue.style.visibility = "visible";
      });
  
      item.addEventListener("mouseleave", () => {
        backDropblue.style.opacity = "0";
        backDropblue.style.visibility = "hidden";
      });
    });
  
  </script>
</section>
