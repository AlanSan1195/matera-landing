  <nav id="navegacion-carta" class="hidden md:block object-fill w-full py-6">
    <ul
      class="flex mx-8 [&>li>a]:px-3 justify-center md:[&>li>a]:text-nowrap lg:[&>li>a]:px-5 lg:[&>li>a]:text-xl"
