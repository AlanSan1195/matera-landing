---
const { color, title, subtitle, id, showFooterContent } = Astro.props;
const textColor = `text-${color}`;
import ExMenu from "./exMenu.astro";
import ExMenuEnsaladas from "./exMenuEnsaladas.astro";
import ExMenuEntradas from "./exMenuEntradas.astro";
import ExMenuPizzas from "./exMenuPizzas.astro";
import ExMenuCocina from "./exMenuCocina.astro";
import ExMenuPostres from "./ExMenuPostress.astro";
---

<section
  class="landing-section bg-neutral-900 h-screen w-screen overflow-hidden py-[60px]"
  data-header-color={color}
  id={id}
>
  <!-- //navegacion sm -->

  <nav id="modal-menu" class="md:hidden text-center">
    <button
      id="boton-carta"
      class="md:hidden border-[2px] backdrop-blur-sm font-bold text-xl rounded-xl text-white px-12 py-2 inline-block hover:scale-105 bg-red-500 hover:text-white transition-colors"
    >
      Carta
    </button>
    <ul
      id="lista"
      class="w-60 border-solid border-black border-1 rounded-md bg-orange-50 flex flex-col mx-auto mt-4 [&>li>a]:transition-colors [&>li]:m-3 [&>li>a]:flex [&>li>a]:justify-center [&>li>a]:duration-200 [&>li>a]:text-black [&>li>a]:font-medium [&>li>a]:px-6 [&>li>a]:py-2 [&>li>a]:rounded-md"
    >
      <li>
        <a class="hover:bg-blue-200 hover:text-red-500" href="#home">
          Empanadas<img class="h-5" alt="arrow icon" src="/arrow-icon.svg" /></a
        >
      </li>
      <li>
        <a class="hover:bg-blue-200 hover:text-red-500" href="#model-s"
          >Entradas<img class="h-5" alt="arrow icon" src="/arrow-icon.svg" /></a
        >
      </li>
      <li>
        <a class="hover:bg-blue-200 hover:text-red-500" href="#model-3">
          Ensaladas<img class="h-5" alt="arrow icon" src="/arrow-icon.svg" /></a
        >
      </li>
      <li>
        <a class="hover:bg-blue-200 hover:text-red-500" href="#model-x"
          >Pizzas<img class="h-5" alt="arrow icon" src="/arrow-icon.svg" /></a
        >
      </li>
      <li>
        <a class="hover:bg-blue-200 hover:text-red-500" href="#model-y"
          >Nuetsra Cocina<img
            class="h-5"
            alt="arrow icon"
            src="/arrow-icon.svg"
          /></a
        >
      </li>
      <li>
        <a class="hover:bg-slate-100 hover:text-red-500" href="#powerwall"
          >Mar<img class="h-5" alt="arrow icon" src="/arrow-icon.svg" /></a
        >
      </li>
      <li>
        <a class="hover:bg-slate-100 hover:text-red-500" href="#powerwall"
          >Granja<img class="h-5" alt="arrow icon" src="/arrow-icon.svg" /></a
        >
      </li>
      <li>
        <a class="hover:bg-slate-100 hover:text-red-500" href="#powerwall"
          >Carne<img class="h-5" alt="arrow icon" src="/arrow-icon.svg" /></a
        >
      </li>
      <li>
        <a class="hover:bg-slate-100 hover:text-red-500" href="#powerwall"
          >Postres<img class="h-5" alt="arrow icon" src="/arrow-icon.svg" /></a
        >
      </li>
    </ul>
  </nav>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const boton = document.getElementById("boton-carta");
      // Obtén el botón y el elemento <ul>
      const ul = document.getElementById("lista");
      const items = ul.querySelectorAll("li");

      boton.addEventListener("click", function () {
        items.forEach((item) => {
          if (
            item.style.visibility === "hidden" ||
            item.style.visibility === ""
          ) {
            item.style.visibility = "visible";
          } else {
            item.style.visibility = "hidden";
          }
          if (
            ul.style.visibility === "hidden" ||
            item.style.visibility === ""
          ) {
            ul.style.visibility = "visible";
          } else {
            ul.style.visibility = "hidden";
          }
          if (item.style.visibility === "visible") {
            ul.style.visibility = "visible";
          }
        });
      });
    });
  </script>

  <!-- // navegacion media  -->
  <header class="hidden md:block text-center bg-slate-400 py-12">
    <h1 class="text-5xl font-semibold">Menú</h1>
    <h3 class="text-3xl font-medium">Apetito por lo que hacemos</h3>
  </header>
  <nav id="" class="hidden md:block object-fill w-full">
    <ul
      id="navegacion-carta"
      class="flex py-1 mx-auto [&>li>a]:px-3 justify-center md:[&>li>a]:text-nowrap lg:[&>li>a]:px-5 lg:[&>li>a]:text-xl lg:felx sticky top-0 "
    >
      <li class=" ">
        <a
          id="ver-empanadas"
          class="font-semibold text-slate-400 text-sm hover:text-red-500"
        >
          Empanadas</a
        >

        <a
          id="ver-entradas"
          class="font-semibold text-slate-400 text-sm hover:text-red-500"
          >Entradas</a
        >
        <a
          id="ver-ensaladas"
          class="font-semibold text-slate-400 text-sm hover:text-red-500"
          >Ensaladas</a
        >
        <a
          id="ver-pizzas"
          class="font-semibold text-slate-400 text-sm hover:text-red-500"
          >Pizzas</a
        >
        <a
          id="ver-cocina"
          class="font-semibold text-slate-400 text-sm hover:text-red-500"
          >Nuestra cocina</a
        >
        <a
          id="ver-parrilla"
          class="font-semibold text-slate-400 text-sm hover:text-red-500"
          >Parrilla</a
        >
        <a
          id="ver-postres"
          class="font-semibold text-slate-400 text-sm hover:text-red-500"
          >Postres</a
        >
        <ExMenu id="empanadas-container" />
        <ExMenuEnsaladas id="ensaladas-container" class="menu-component" />
        <ExMenuEntradas id="entradas-container" />
        <ExMenuPizzas id="pizzas-container" />
        <ExMenuCocina id="cocina-container" />

        <ExMenuPostres id="postres-container" />
      </li>
    </ul>
  </nav>
</section>
<script>
  //muestra y oculta el contenedor de empanadas
  document.addEventListener("DOMContentLoaded", function () {
    // Obtén todos los elementos de la lista
    const items = document.querySelectorAll("#navegacion-carta li a");

    // Para cada elemento de la lista
    items.forEach((item) => {
      // Agrega un evento de clic
      item.addEventListener("click", function () {
        // Obtén los componentes que deseas ocultar/mostrar
        const empanadasContainer = document.getElementById(
          "empanadas-container"
        );
        const entradasContainer = document.getElementById("entradas-container");
        const ensaladasContainer = document.getElementById(
          "ensaladas-container"
        );
        const pizzasContainer = document.getElementById("pizzas-container");
        const cocinaContainer = document.getElementById("cocina-container");
        const postresContainer = document.getElementById("postres-container");

        // Oculta todos los componentes
        empanadasContainer.style.display = "none";
        ensaladasContainer.style.display = "none";
        entradasContainer.style.display = "none";
        pizzasContainer.style.display = "none";
        cocinaContainer.style.display = "none";
        postresContainer.style.display = "none";

        // Muestra el componente correspondiente al elemento de la lista clickeado
        if (item.id === "ver-empanadas") {
          empanadasContainer.style.display = "grid";
        } else if (item.id === "ver-entradas") {
          entradasContainer.style.display = "grid";
        } else if (item.id === "ver-ensaladas") {
          ensaladasContainer.style.display = "grid";
        } else if (item.id === "ver-pizzas") {
          pizzasContainer.style.display = "grid";
        } else if (item.id === "ver-cocina") {
          cocinaContainer.style.display = "grid";
        } else if (item.id === "ver-postres") {
          postresContainer.style.display = "grid";
        }
      });
    });
  });
</script>
