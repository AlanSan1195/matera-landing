---
import InstagramIcon from "./icons/InstagramIcon.astro";
import TripadivisorIcon from "./icons/TripadivisorIcon.astro";
import FacebookIcon from "./icons/FacebookIcon.astro";
---

<footer class="text-white/80 text-xs md:text-sm p-2 md:hidden">
  <div class="flex flex-col ">
    <div class="flex flex-col ">
      <img
        class="h-16 md:h-35 mb-2"
        src="https://www.lamatera.mx/wp-content/themes/bmx-lamatera/assets/img-logotipo-rojo.svg"
        alt="logo de la matera"
      />
      <p class="font-bold">Av. México 2895</p>
      <p>Col. Vallarta Norte C.P 44690</p>
      <p>Guadalajara, Jalisco, México</p>
    </div>

    <br />

    <div
      class="flex flex-row text-start gap-3 md:gap-16 justify-center items-center"
    >
      <div class="felx flex-col">
        <p class="font-bold">Horarios:</p>
        <p>Lunes a Sábado de 1:00 pm a 12:00 am</p>
        <p>Domingo de 1:00 pm a 10:30 pm</p>
      </div>
      <div class="flex flex-row items-center p-2">
        <div class="flex flex-col items-center">
          <p class="opacity-60 ml-4">Facturacion</p>
          <div class="flex items-center">
            <img
              class="h-5 mx-2"
              src="https://www.lamatera.mx/wp-content/themes/bmx-lamatera/assets/img-whatsapplogo.svg"
              alt="icono watsaap"
            />
            <a
              class="text-[10px] font-bold hover:underline hover:cursor-pointer" href="https://api.whatsapp.com/send/?phone=523313557728&text&type=phone_number&app_absent=0" target="_blank" rel="noopener noreferrer"
              >(33) 1355-7728</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
  <br />
  <nav>
    <ul
      class="flex justify-center items-center [&>li>a]:inline-block [&>li>a]:px-2 [&>li>a]:py-2 opacity-80"
    >
      <li>
        <a
          href="https://www.tripadvisor.com.mx/Restaurant_Review-g150798-d786318-Reviews-La_Matera-Guadalajara_Guadalajara_Metropolitan_Area.html "
          target="_blank"
          rel="noopener noreferrer"
        >
          <TripadivisorIcon class="size-8" />
        </a>
      </li>
      <li>
        <a
          href="https://www.instagram.com/lamateragdl/?hl=es "
          target="_blank"
          rel="noopener noreferrer"
        >
          <InstagramIcon class="size-6 opacity-80" />
        </a>
      </li>
      <li>
        <a
          href="https://www.facebook.com/LaMateraGDL?locale=es_LA "
          target="_blank"
          rel="noopener noreferrer"
        >
          <FacebookIcon class="size-7" />
        </a>
      </li>
    </ul>
  </nav>

  <p>© 2024 La Matera Todos los derechos reservados</p>
</footer>





