---
const { color, title, subtitle, id, showFooterContent } = Astro.props;
const textColor = `text-${color}`;
import FooterMenu from './FooterMenu.astro';
---
<section
  class="landing-section bg-zinc-900 h-screen w-screen text-center overflow-hidden "
  data-header-color={color}
  id={id}
>
  <div class="bg-slate-400  opacity-85 z-30 relative h-[300px] text-end mt-52 md: lg:w-[700px] xl:w-[800px] flex flex-col flex-wrap text-wrap ml-auto md:mt-60 lg:mt-60">
    <header>
      <h2 class={`${textColor} mr-10 pt-10 lg:pt-20 text-2xl lg:text-4xl xl:text-5xl font-medium`}>
        {title}
      </h2>
      <p class={`${textColor}  mr-10 text-sm lg:text-base mt-4`}>
        {subtitle}
      </p>
    </header>

    <footer class="flex flex-col flex-grow justify-end lg:pb-20 mr-auto ml-auto md:mr-14">
      <slot name="footer" />
      <!-- Condicionamente cargar el pie de pÃ¡gina: -->
      {showFooterContent && <FooterMenu />}
    </footer>
  </div>

  <div class="absolute top-0 bottom-0 h-full w-full z-10">
    <slot name="background" />
  </div>
</section>
